<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp">


    <ImageView
        android:id="@+id/img_state_look"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/play2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <ImageView
        android:id="@+id/line_state_top"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone"
        android:background="@color/button_background2"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/line_state_btm"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/button_background2"/>
    <ImageView
        android:id="@+id/dotted_state_top"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="1dp"
        android:background="@drawable/dotted_state"
        android:layerType="software"/>
    <ImageView
        android:id="@+id/dotted_state_btm"
        android:background="@drawable/dotted_state"
        android:layerType="software"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/study_item_title"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:text="排版蹦沙卡拉卡泵蹦沙卡拉卡"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/study_item_teacher"
                android:layout_width="wrap_content"
                android:text="讲师：二狗子"
                android:textColor="@color/gray"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/study_item_time"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:text="时长：25:00分钟"
                android:textColor="@color/gray"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>