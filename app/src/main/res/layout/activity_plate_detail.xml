<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/app_background_color"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/home_title"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/situation1"
    android:background="@color/gray"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:textSize="10dp"
    android:gravity="center"
    android:textColor="@color/black_overlay"
    />

            <RelativeLayout
                android:id="@+id/plate_introduction"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_margin="7dp"
                android:padding="7dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/button_background2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/detail_title"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/plate1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="课程介绍▷"
                        android:textColor="@color/button_background1"/>
                </LinearLayout>
            </RelativeLayout>
            <!--<android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:id="@+id/refresh_layout"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/toolbar"
                android:layout_height="match_parent">-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    android:background="@color/white"
                    android:orientation="vertical">
            <TextView
                android:id="@+id/plate_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:padding="7dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/gray"/>
                <View
                    android:id="@+id/divider"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="@color/button_background1"/>


            </RelativeLayout>
            <ExpandableListView
                android:padding="7dp"
                android:id="@+id/detail_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"/>
        </LinearLayout>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

</LinearLayout>