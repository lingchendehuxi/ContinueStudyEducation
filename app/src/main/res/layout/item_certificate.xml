<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/layout_padding"
    android:layout_marginTop="@dimen/layout_margin"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/certifi_title"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/layout_padding"
            android:textSize="17dp"
            android:textColor="@color/button_background2"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/layout_padding"
    >
    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/teacher"/>
    <TextView
        android:id="@+id/certifi_teacher"
        android:layout_width="wrap_content"
        android:text="讲师："
        android:textSize="14dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/layout_padding"
        >
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/remark"/>
        <TextView
            android:id="@+id/certifi_remark"
            android:layout_width="wrap_content"
            android:text="简介："
            android:textSize="14dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:background="@color/gray"
    android:layout_marginBottom="@dimen/layout_padding"
    />
    <TextView
        android:id="@+id/certifi_state"
        android:layout_width="wrap_content"
        android:text="证书正在审核中..."
        android:textSize="15dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />
</LinearLayout>