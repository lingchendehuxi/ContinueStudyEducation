<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/layout_padding"
        android:id="@+id/ll_top_info"
        android:orientation="horizontal"
        android:layout_below="@id/toolbar"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:id="@+id/iv_teacher"
            android:layout_height="160dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:layout_marginLeft="12dp"
            android:id="@+id/tv_teacher_name"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_info_title"
        android:layout_below="@id/ll_top_info"
        android:background="#EFEEF3"
        android:textColor="@color/dark_gray"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:text="基本信息"
        android:textSize="@dimen/text_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_teacher_info"
        android:layout_below="@id/tv_info_title"
        android:layout_width="match_parent"
        android:padding="@dimen/layout_padding"
        android:textSize="@dimen/text_size_media"
        android:layout_height="wrap_content" />

</RelativeLayout>