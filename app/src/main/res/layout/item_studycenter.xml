<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/day_layout_bg_pressedtwo"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/itme_studycenter_bg"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:id="@+id/study_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textColor="@color/button_background2"
                android:textSize="17dp"
                android:text="@string/home_title"
                />
        <RelativeLayout
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/alreadylearning_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/bk_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="板块2：质量控制"
                    android:textSize="13dp"
                    android:layout_marginBottom="6dp"
                    />
                <RelativeLayout
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="17dp"
                        android:src="@mipmap/study_play"
                        />
                    <TextView
                        android:id="@+id/bk_title"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/notlearning_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="讲师："
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/radio_button_conner_radius"
                        />
                    <TextView
                        android:id="@+id/cnt_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="讲师：张三，李四，二狗子"
                        android:layout_marginBottom="@dimen/radio_button_conner_radius"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="简介："
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/radio_button_conner_radius"
                        />
                    <TextView
                        android:id="@+id/cnt_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="主办：上海易慧睿思"
                        android:textSize="13dp"
                        android:layout_marginBottom="@dimen/radio_button_conner_radius"
                        />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:id="@+id/separate_img"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray"/>


            <LinearLayout
                android:layout_margin="6dp"
                android:id="@+id/alreadylearning_bom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/over_layout"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/study2"
                        />
                    <TextView
                        android:id="@+id/study_overday"
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50天后结束"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/not_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_margin"
                >
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/study1_1"

                    />
                <TextView
                    android:id="@+id/not_cnt"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/12课件"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    />
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/study_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_margin"
                    >
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/study1"
                        />

                    <TextView
                        android:id="@+id/study_cnt"
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您已学习2/5课件"
                        android:textSize="11dp"
                        android:textColor="@color/button_background1"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                    android:id="@+id/top_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="继续学习》"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textColor="@color/button_background1"
                    android:background="@drawable/study_btn1"
                    />
                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
        <ImageView
            android:id="@+id/pass_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="@dimen/layout_margin"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>