<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="50dp">
<ImageView
    android:onClick="back"
    android:layout_width="25dp"
    android:layout_height="30dp"
    android:src="@mipmap/home_back"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:visibility="gone"
    android:id="@+id/home_title_back"
    />
    <TextView
        android:id="@+id/home_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/home_title_text_color"
        android:textSize="@dimen/text_size_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/home_use_intro"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/home_help"
            android:layout_centerVertical="true"
            android:tint="@android:color/holo_red_light"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:text="@string/use_intro"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_size_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>